{
  "index_patterns": ["mikrotik-firewall-*"],
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "index.lifecycle.name": "mikrotik_policy",
    "index.lifecycle.rollover_alias": "mikrotik-firewall"
  },
  "mappings": {
    "properties": {
      "@timestamp": { "type": "date" },
      "@timestamp_local": { "type": "date" },
      "entry_type": { "type": "keyword" },
      "in_interface": { "type": "keyword" },
      "out_interface": { "type": "keyword" },
      "connection_mark": { "type": "keyword" },
      "connection_state": { "type": "keyword" },
      "src_mac": { "type": "keyword" },
      "protocol": { "type": "keyword" },
      "tcp_flags": { "type": "keyword" },
      "src_ip": { "type": "ip" },
      "dst_ip": { "type": "ip" },
      "src_port": { "type": "integer" },
      "dst_port": { "type": "integer" },
      "nat_dst_ip": { "type": "ip" },
      "nat_dst_port": { "type": "integer" },
      "length": { "type": "integer" },
      "traffic_type": { "type": "keyword" },
      "src_geoip": { 
        "properties": {
          "country_name": { "type": "keyword" },
          "city_name": { "type": "keyword" },
          "location": { "type": "geo_point" }
        }
      },
      "dst_geoip": {
        "properties": {
          "country_name": { "type": "keyword" },
          "city_name": { "type": "keyword" },
          "location": { "type": "geo_point" }
        }
      }
    }
  }
}